<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_project_item_image"
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/problem_solve_img" />

        <TextView
            android:id="@+id/text_view_project_items_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_project_item_image"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-black"
            android:textSize="17sp"
            tools:text="London" />

        <TextView
            android:id="@+id/text_view_project_items_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_project_items_title"
            android:layout_margin="5dp"
            android:textSize="13sp"
            tools:text="London, the capital of England and the United Kingdom, is a 21st-century city with history stretching back to Roman times. At its centre stand the imposing Houses of Parliament, the iconic ‘Big Ben’ clock tower and Westminster Abbey, site of British monarch coronations. Across the Thames River, the London Eye observation wheel provides panoramic views of the South Bank cultural complex, and the entire city." />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_margin="10dp"
            android:layout_below="@id/text_view_project_items_description"
            tools:rating="4.0f"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
